    "y-indexeddb": "^9.0.12",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@scena/guides": "^0.29.2",
    "@scena/react-guides": "^0.28.2",
    "@types/inquirer": "^9.0.7",
